generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  TEACHER
  STUDENT
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role
  enrollmentId String?
  displayName String?
  profilePicture String? @db.Text


  // Relations
  coursesTeached Course[]        @relation("TeacherCourses")
  coursesStudied StudentCourse[]
  attendances    Attendance[]

  @@unique([id, role])
}

model Course {
  id          String  @id @default(uuid())
  name        String
  description String?
  picture     String? @db.Text
  inviteCode  String? @unique

  teacherId   String
  teacherRole Role    @default(TEACHER)
  teacher     User    @relation("TeacherCourses", fields: [teacherId, teacherRole], references: [id, role])

  students StudentCourse[]
  classes  Class[]
  schedules CourseSchedule[]
}

model CourseSchedule {
  id        String @id @default(uuid())
  dayOfWeek Int    // 0=Sun, 1=Mon, ..., 6=Sat
  startTime String // "08:00"
  endTime   String // "10:00"

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model StudentCourse {
  studentId   String
  studentRole Role   @default(STUDENT)
  student     User   @relation(fields: [studentId, studentRole], references: [id, role])

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  assignedAt DateTime @default(now())

  @@id([studentId, courseId])
}

model Class {
  id    String   @id @default(uuid())
  topic String
  date  DateTime

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  attendances Attendance[]
}

model Attendance {
  id String @id @default(uuid())

  classId String
  class   Class  @relation(fields: [classId], references: [id], onDelete: Cascade)

  studentId String
  student   User   @relation(fields: [studentId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([classId, studentId])
}
